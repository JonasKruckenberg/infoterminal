{
  "name": "infoterminal",
  "productName": "infoterminal",
  "version": "0.1.0",
  "description": "My Electron application description",
  "main": ".webpack/main",
  "scripts": {
    "dev": "SET MODE=development && electron-forge start --inspect-electron",
    "package": "SET MODE=production && electron-forge package",
    "make": "SET MODE=production && electron-forge make",
    "publish": "SET MODE=production && electron-forge publish",
    "lint": "eslint --ext .ts .",
    "serve": "http-server server-test"
  },
  "keywords": [],
  "author": {
    "name": "Jonas Kruckenberg",
    "email": "jonas@kruckenbg.de"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "asar": true,
        "icon": "src/Nabu-logo.ico"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-appx",
          "config": {
            "name": "infoterminal"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/app/index.html",
                  "js": "./src/app/control.ts",
                  "name": "control_window",
                  "preload": {
                    "js": "./src/app/preload.ts"
                  }
                },
                {
                  "html": "./src/app/index.html",
                  "js": "./src/app/display.ts",
                  "name": "display_window",
                  "preload": {
                    "js": "./src/app/preload.ts"
                  }
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.49",
    "@electron-forge/maker-appx": "^6.0.0-beta.50",
    "@electron-forge/maker-deb": "^6.0.0-beta.49",
    "@electron-forge/maker-rpm": "^6.0.0-beta.49",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.49",
    "@electron-forge/maker-zip": "^6.0.0-beta.49",
    "@electron-forge/plugin-webpack": "^6.0.0-beta.49",
    "@marshallofsound/webpack-asset-relocator-loader": "^0.5.0",
    "@types/nanoid": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "css-loader": "^3.4.2",
    "electron": "8.0.0",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.1",
    "file-loader": "^5.0.2",
    "fork-ts-checker-webpack-plugin": "^3.1.1",
    "node-loader": "^0.6.0",
    "node-sass": "^4.13.1",
    "sass-loader": "^8.0.2",
    "style-loader": "^0.23.1",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.5",
    "vue-devtools": "^5.1.3",
    "vue-loader": "^15.8.3",
    "vue-template-compiler": "^2.6.11"
  },
  "dependencies": {
    "@types/fs-extra": "^8.0.1",
    "@types/node-static": "^0.7.3",
    "@types/usb": "^1.5.1",
    "blob": "^0.1.0",
    "core-decorators": "^0.20.0",
    "drivelist": "^8.0.10",
    "electron-squirrel-startup": "^1.0.0",
    "execa": "^4.0.0",
    "file-type": "^14.1.3",
    "firebase": "^7.8.2",
    "fs-extra": "^8.1.0",
    "local-web-server": "^4.0.0",
    "mapbox-gl": "^1.7.0",
    "nanoid": "^2.1.11",
    "node-static": "^0.7.11",
    "usb": "^1.6.2",
    "vue": "^2.6.11",
    "vue-meta": "^2.3.2",
    "vue-property-decorator": "^8.4.0",
    "vue-router": "^3.1.5",
    "vue-svg-inline-loader": "^1.4.5",
    "vuex": "^3.1.2"
  }
}
