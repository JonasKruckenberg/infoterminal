	"config": {
		"forge": {
			"packagerConfig": {
				"asar": true,
				"icon": "src/icons/Nabu-logo.ico",
				"appCopyright": "Entwickelt von Jonas Kruckenberg <iterpre@protonmail.com> f√ºr den NABU Woldenhof"
			},
			"makers": [
				{
					"name": "@electron-forge/maker-appx",
					"config": {
						"packageName": "NabuTerminal",
						"packageDisplayName": "Nabu Infoterminal",
						"packageDescription": "A infoterminal for the nabu woldenhof",
						"publisher": "CN=jonaskruckenberg.de",
						"devCert": "./jonaskruckenberg.pfx",
						"certPass": "Jonas"
					}
				}
			],
			"plugins": [
				[
					"@electron-forge/plugin-webpack",
					{
						"mainConfig": "./webpack.main.config.js",
						"renderer": {
							"config": "./webpack.renderer.config.js",
							"entryPoints": [
								{
									"html": "./src/app/template.html",
									"js": "./src/app/index.ts",
									"name": "control_window",
									"preload": {
										"js": "./src/app/preload.ts"
									}
								},
								{
									"html": "./src/app/template.html",
									"js": "./src/app/index.ts",
									"name": "display_window",
									"preload": {
										"js": "./src/app/preload.ts"
									}
								}
							]
						}
					}
				]
			]
		}
